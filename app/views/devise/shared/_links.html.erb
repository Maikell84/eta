<%- if controller_name != 'sessions' %>
  <%= bootstrap_button_to "Log in", new_session_path(resource_name), button_classes: 'btn-secondary' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= bootstrap_button_to "Registrieren", new_registration_path(resource_name), button_classes: 'btn-secondary' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= bootstrap_button_to "Passwort vergessen?", new_password_path(resource_name), button_classes: 'btn-secondary' %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= bootstrap_button_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), button_classes: 'btn-secondary' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= bootstrap_button_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), button_classes: 'btn-secondary' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= bootstrap_button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), button_classes: 'btn-secondary' %><br />
  <% end %>
<% end %>
