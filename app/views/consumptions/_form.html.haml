= simple_form_for @form, as: :form, url: consumption_path, method: :patch do |f|
  = f.input :value
  = f.input :source
  = f.input :created_at
  - if @consumption.errors.any?
    #error_explanation
      %h2= "#{pluralize(@consumption.errors.count, "error")} prohibited this consumption from being saved:"
      %ul
        - @consumption.errors.full_messages.each do |message|
          %li= message

  .actions
    = f.submit 'Save'
